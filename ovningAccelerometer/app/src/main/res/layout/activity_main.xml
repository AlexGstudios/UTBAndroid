<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txtOnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Off"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/txtAcc"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="90dp"
            android:layout_height="49dp"
            android:layout_below="@+id/txtAcc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="113dp"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <TextView
            android:id="@+id/txtXaxis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X-axis"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/imgView"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txtYaxis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y-axis"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/txtXaxis"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txtZaxis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z-axis"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/txtYaxis"
            android:layout_centerHorizontal="true"
            />

        <ToggleButton
            android:id="@+id/tglOnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Off"
            android:textOn="On"
            android:layout_below="@+id/txtZaxis"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>